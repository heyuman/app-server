/* pages/video/pages/detailed/detailed.wxss */
.actor{
  padding: 0rpx 20rpx 50rpx 20rpx;
  box-sizing: border-box;
}
.title text{
  line-height: 100rpx;
  text-align: left;
  font-size: 40rpx;
  font-weight:600;
  word-break: break-all;
}
.cover-box{
  width:100%;
  height: 100%;
  float: left;
}
.cover-box .cover{
  /* display: inline-block; */
  width: 40%;
  float:left;
  
}
.cover-box .cover image{
  width: 100%;
  height: 380rpx;
}
.cover-box .jianjie{
  float:right;
  width: 58%;
  margin-left: 10rpx;
  /* height:auto; */
  
}
/* .cover-box .jianjie .info{
  width: 100%;
  height: 22px; 
} 
*/
.cover-box .jianjie .info text{
  
  word-break: break-all;
  font-size: 26rpx;
  line-height: 0.8;
  color:#333;
}

.sub-title{
  width:100%;
  height:50rpx;
  line-height: 50rpx;
  text-align: left;
  color:#072;
  font-size:40rpx;
  margin-top: 30rpx;
}
.synopsis{
  display: block;
  width:100%;
  height: auto;
  word-break: break-all;
  font-size: 26rpx;
  color:#333;
  text-indent: 20rpx;
}

.photo-container .photo{
  width:40%;
  height:360rpx;
  margin-left: 20rpx;
  display: inline-block;
  vertical-align: top;
  margin-top: 20rpx;
}
.photo-container .photo image{
  width:100%;
  height:100%;
}
.photo-container{
  white-space: nowrap;
  margin-top: 20rpx;
  margin-left: -20rpx;
  height:400rpx;
}
.aboutmovies-container{
  white-space: nowrap;
  margin-top: 20rpx;
  margin-left: -20rpx;
  height:400rpx;
}
.aboutmovies-container .aboutmovies{
  display: inline-block;
  vertical-align: top;
  width: 280rpx;
  height:400rpx;
  margin-left: 20rpx;
}
.aboutmovies-container .aboutmovies .aboutmovies-img{
  width:100%;
  height:370rpx;
}
.aboutmovies .aboutmovies-img image{
  width:100%;
  height:100%;
}
.aboutmovies-container .aboutmovies .aboutmovies-name{
  width: 100%;
  height:30rpx;
  display: block;
  line-height: 30rpx;
  text-align: center;
  font-size:28rpx;
  color:#37a;
}
.comment-container .comment{
  display: block;
  width:100%;
  margin-top: 50rpx;
  padding-bottom: 50rpx;
  border-bottom:1px solid #ccc;
}
.comment .comment-info{
  width:100%;
  height:70rpx;
}
.comment .comment-info .comment-info-nickname{
  display: inline-block;
  width: 60%;
  height:100%;
  line-height: 70rpx;
  vertical-align: top;
}
.comment .comment-info .comment-info-nickname text{
  font-size:36rpx;
  color:#072;
}
.comment .comment-info .comment-info-like{
  display: inline-block;
  width: 30%;
  height:100%;
  line-height: 70rpx;
  vertical-align: top;
  margin-left: 30rpx;
  text-align: right;
}
.comment .comment-info .comment-info-like text{
  font-size:26rpx;
}
.comment .comment-content{
  width:100%;
}
.comment .comment-content text{
  font-size: 28rpx;
  color:#333;
  line-height: 30rpx;
  text-indent: 20rpx;
}
.comment .comment-time{
  width: 100%;
  height:70rpx;
  margin-top: 20rpx;
}
.comment .comment-time text{
  width: 100%;
  line-height: 70rpx;
  font-size: 24rpx;
  color:#666;
  text-align: left;
}
.actor-loading image{
  /* display: block; */
  width:50rpx;
  height:50rpx;
  position: absolute;
  top:50%;
  left:50%;
  /* transform: translateX(-50%) translateY(-50%); */
}
